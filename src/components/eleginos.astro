---
import CardsElegirnos from "./queOfrecemos.astro"
---
<div class="eleginos-bg">
    <section class="Elegirnos">
        <span>Factores Importantes</span>
        <h3>Que tener en cuenta para tu Sitio Web</h3>
        <CardsElegirnos></CardsElegirnos>
    </section>
</div>
<style>
    *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    .Elegirnos{
    display: flex;
    width: 90rem;
    flex-direction: column;
    align-items: center;
    margin: auto;
}
.Elegirnos span{
    font-size: 1.6rem;
}
.Elegirnos h3{
    font-size: 3rem;
    text-shadow: 0 1px rgba(0, 0, 0, 0.25);
}
@media screen and (max-width: 800px) {
    .Elegirnos{
        width: 90vw;
        text-align: center;
    }
    .Elegirnos span{
        font-size: 1.1rem;
    }
    .Elegirnos h3{
        font-size: 1.8rem;
    }
}
</style>
---
import ventajas from "../config/caracteristicas.json"
---

<section class="ventajas">

        <div class="char__cards">
            {
                ventajas.map((ventaja)=>(
                    <div class="card">
                        <h4>{ventaja.title}</h4>
                        <p>{ventaja.content}</p>
                        <figure>
                            <img src={ventaja.img}>
                        </figure>
                    </div>
                ))
            }
    </div>

</section>



<style>

*{
    margin: 0;
    padding: 0;
}
.ventajas h3{
    font-size: 1.8rem;
    margin-bottom: 3rem;
    color: #00295B;
}
.ventajas{
    width: 70rem;
    margin: auto;
    display: flex;
    flex-direction: column;
}
.char__cards{
    display: grid;
   grid-template-columns: 1fr 1fr 1fr;
   grid-template-rows: 25rem 25rem;
   gap: 1rem;
   
}
.card{
    border: 1px solid #EFEFEF;
    position: relative;
    z-index: 100;
    background: #fff;
    border-radius: 15px;
    display: flex;
    flex-direction: column;
    width: 19rem;
    align-items: center;
    justify-content: center;
    text-align: center;
    gap: 1.5rem;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);

}
.card figure{
    width: 50%;
}
.card img{
    width: 100%;
}

.card h4{
    width: 90%;
    color: #1C2B5C;
    font-size: 1.5rem;
    font-weight: 400;
}
.card p{
    width: 90%;
    color: #424242;
    font-weight: 300;
}
</style>
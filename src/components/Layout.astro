---

import { SEO } from "astro-seo";

interface Props {
    title?: string;
    url?: string;
    descripcion?: string;
}

const { title, url, descripcion } = Astro.props;

---
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Conversa | {title}</title>
    <link rel="icon" type="image/x-icon" href="./img/favicon-conver.png">

    <SEO
    description="Desarrollamos la Web que tu empresa necesita, optimizada para aumentar la conversión y enfocada en enriquecer la experiencia del usuario"
    openGraph={
        {
            basic: {
                title: "Conversa | Desarrollo Web en Paraguay",
                type: "Website",
                image: "./img/conversa-logo.jpg"
            }
        }
    }
    canonical={url}
    />
    <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "Organization",
            "name": "Conversa",
            "url": "https://conversa.com.py/",
            "sameAs": [
                "www.facebook.com/61553693372809",
                "instagram.com/conversa_py"
            ]
        }</script>
    <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "Organization",
            "url": "https://conversa.com.py/",
            "logo": "./img/conversa-logo.jpg",
            "contactPoint": [
                {
                    "@type": "ContactPoint",
                    "telephone": "+595 973 236 438",
                    "contactType": "sales",
                    "areaServed": "PY",
                    "contactOption": "Toll",
                    "availableLanguage": "Spanish"
                }
            ]
        }</script>
    <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "Organization",
            "url": "https://conversa.com.py/",
            "logo": "./img/conversa-logo.jpg"
        }</script>
</head>
<body>
    <main>
        <nav class="menu">
            <div class="opciones">
                <span class="logo" onclick="window.location.href = './';">
                    Conversa
                </span>
                <ul><li><a href="./landings">Landings</a></li>
                <li><a href="./soporte">Soporte</a></li>
                <li><a href="./nosotros">Nosotros</a></li>
                <li><a href="./planes">Planes</a></li>
            </ul>
            </div>
            </div>
            <div class="contacto">
                <span><a href="https://api.whatsapp.com/send?phone=+595973236438&text=Buenas%2C+estoy+interesado+en+una+landing+page+personalizada">Contactanos</a></span>
                <img id="hamburger" class="burger" src="./img/menuToggle.svg" alt="Hamburguesa">
                <img id="salir" class="burger onScreen-mob" src="./img/x.svg" alt="X">
            </div>
        </nav>
        <div class="menu-mobile onScreen">
            <span id="Plantillas">Plantillas</span>
            <span id="Desarrollo">Planes</span>
            <span id="Soporte">Soporte</span>
            <span id="Nosotros">Nosotros</span>
        </div>
        <slot></slot>
    </main>
    <footer>
        <div class="footer-container">
            <span>Conversa</span>
            <div class="footer_sections">
                <ul class="footer-section">
                    <span class="foot_titulo">Nosotros</span>
                    <!-- <li>Términos y condiciones</li> -->
                    <li onclick="window.location.href = './planes';">Planes</li>
                    <li onclick="window.location.href = './contacto';">Contacto</li>
                    <li onclick="window.location.href = './nosotros';">Quienes Somos</li>
                </ul>

                    <span class="bolder">E-Mail</span>
                    <li onclick="window.location.href = 'mailto:social@conversa.com.py';">social@conversa.com.py</li>
                    <span class="bolder">Teléfono</span>
                    <li id="tel" onclick="window.location.href = 'tel:+595973236438'">+595 973236438</li>
                </ul>
            </div>
            <div class="line">
            </div>
            <div class="social-icons">
                <div class="social-icon" onclick="window.location.href = 'https://www.instagram.com/conversa_py?igsh=Znh6OHI3NnJ6ajk4'">
                    <figure>
                        <img src="./img/instagram.svg" alt="Instagram">
                    </figure>
                    <span>Instagram</span>
                </div>
                <div class="social-icon" onclick="window.location.href = 'https://www.facebook.com/61553693372809'">
                    <figure>
                        <img src="./img/facebook.svg" alt="Facebook">
                    </figure>
                    <span>Facebook</span>
                </div>
                <div class="social-icon" onclick="window.open('https://api.whatsapp.com/send?phone=+595973236438&text=Buenas%2C+estoy+interesado+en+una+landing+page+personalizada', '_blank');">
                    <figure>
                        <img src="./img/whatsapp.svg" alt="Whatsapp">
                    </figure>
                    <span>Whatsapp</span>
                </div>
            </div>
        </div>

---
interface Prop {
    header: string;
    subtitle: string;
    imagen: string;
}
const {header, subtitle, imagen} = Astro.props;
---
<main>
    <div class="backgroundIMG">
        <img src={imagen} alt="background">
    </div>
    <div class="hero__header">
            <div class="hero__texto">
                <h1>{header}</h1>
                <p>{subtitle}</p>
            </div>
    </div>
</main>
<style>
*{
margin: 0;
padding: 0;
box-sizing: border-box;
}
main{
    width: 100%;
}
.backgroundIMG img{
    height: 65vh;
    object-fit: cover;
    width: 100%;
    position: absolute;
}
.hero__header{
    color: #fff;
    position: relative;
    z-index: 100;
    width: 100%;
    background-color: hsl(219, 68%, 51%,0.8);
    height: 65vh;
    padding: 0.1px;
}
.hero__texto{
    width: 35vw;
    text-align: center;
    margin: 15vh auto;
    font-size: 1.4rem;
}
.hero__texto>*{
    margin-bottom: 2rem;
}
.hero__texto h1{
    text-shadow: 2px 2px rgb(0, 0, 0, 0.4);
    font-size: 3.6rem;
    line-height: 120%;
}
@media screen and (max-width:800px){
    .hero__header{
        height: 45vh;
    }
    .backgroundIMG img{
        height: 45vh;
    }
    .hero__texto{
        width: 95vw;
        font-size: .95rem;
    }
    .hero__texto h1{
        font-size: 1.8rem;
        width: 15rem;
        margin: 2vh auto;
    }
}
</style>